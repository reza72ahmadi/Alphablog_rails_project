<div class="container">
    <div class = 'row justify-content-center'>
    <div class = 'col-10'>
    <%= render'shared/errors', obj: @user %>

      <%= form_with model: @user, class:'shadow p-3 bg-info rounded' do |form| %>
        <div class = 'form-group row'>
          <%= form.label :username , class:'col-2 col-form-label text-light'%>
          <div class='col-10'>
          <%= form.text_field :username , class:'form-control', placeholder:'Enter your username' %>
        </div>
      </div>
          
      <div class = 'form-group row mt-3'>
          <%= form.label :email , class:'col-2 col-form-label text-light' %>
          <div class='col-10'>
          <%= form.email_field :email, class:'form-control', placeholder:'Enter your email address' %>
          </div>
      </div>
       <div class = 'form-group row mt-3'>
          <%= form.label :password , class:'col-2 col-form-label text-light' %>
          <div class='col-10'>
          <%= form.password_field :password, class:'form-control', placeholder:'Choose a password' %>
          </div>
      </div>

        <div class = 'd-flex justify-content-center mt-3'>
          <%= form.submit(@user.new_record? ? "Sign up" : "update account", class:'btn btn-outline-light btn-lg')%>
        </div>
    <% end %>
    </div>
   <div class="mb-3 d-flex justify-content-center mt-3">
    <%= link_to '[Cancel and reuturn to the article listing]', articles_path(@articles) %>
  </div>
  </div>
</div>
