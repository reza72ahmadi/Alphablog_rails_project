<div id = 'page-content'>
  <h1 class= 'text-center mt-4'>Log in </h1>
  <div class="container">
    <div class = 'row justify-content-center'>
      <div class = 'col-10'>
        <%= form_with(scope: :session, url:login_path, class:'shadow p-3 bg-info rounded', local: true) do |form| %>
          <div class = 'form-group row mt-3'>
            <%= form.label :email , class:'col-2 col-form-label text-light' %>
            <div class='col-10'>
              <%= form.email_field :email, class:'form-control', placeholder:'Enter your email address' %>
            </div>
          </div>
          <div class = 'form-group row mt-3'>
            <%= form.label :password , class:'col-2 col-form-label text-light' %>
            <div class='col-10'>
              <%= form.password_field :password, class:'form-control', placeholder:'Enter your password' %>
            </div>
          </div>
          <div class = 'd-flex justify-content-center mt-3'>
            <%= form.submit"Log in" , class:'btn btn-outline-light btn-lg'%>
          </div>
        <% end %>
      </div>
      <div class="mb-3 d-flex justify-content-center mt-3">
        <%= link_to '[Cancel and reuturn to the article listing]', articles_path(@articles) %>
      </div>
    </div>
  </div>
</div>
