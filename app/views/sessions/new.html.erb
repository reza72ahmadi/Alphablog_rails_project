<h1 class="text-center mt-4">Login</h1>
<div class="container ">
  <div class="row justify-content-center">
    <div class="con-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row mt-2">
          <%= form.label :email, class:"col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= form.email_field :email,class:"form-control shadow rounded",
             placeholder:"Enter your email address"%>
          </div>
        </div>
        <div class="form-group row mt-2">
          <%= form.label :password, class:"col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= form.password_field :password,class:"form-control shadow rounded",
             placeholder:"Enter your password"%>
          </div>
        </div>
        <div class="text-center mt-3">
          <%= form.submit"Login" ,class:"btn btn-outline-light btn-lg"%>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to article lissting ]', articles_path ,
      class:"text-center text-primary" %>
  </div>
</div>
