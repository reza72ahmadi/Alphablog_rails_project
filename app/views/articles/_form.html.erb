<div class="container ">
  <div class="row justify-content-center">
    <div class="con-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with model: @article, html: { class:"shadow p-3 mb-3 bg-info rounded"} do |form| %>
        <div class="form-group row">
          <%= form.label :title, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class:"form-control shadow rounded", placeholder:"Title of the article" %>
          </div>
        </div>
        <div class="form-group row mt-2">
          <%= form.label :body, class:"col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= form.text_area :body, rows:10, class:"form-control shadow rounded", placeholder:"Description of the article"%>
          </div>
        </div>
        <div class="text-center mt-3">
          <%= form.submit class:"btn btn-outline-light btn-lg " %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to article lissting ]', articles_path ,  class:"text-center text-primary" %>
  </div>
</div>
