<div class="container">
  <div class = 'row justify-content-center'>
    <div class = 'col-10'>
      <%= render'shared/errors', obj: @article %>
      <%= form_with model: article, class:'shadow p-3 bg-info rounded' do |form| %>
        <div class = 'form-group row'>
          <%= form.label :title , class:'col-2 col-form-label text-light'%>
          <div class='col-10'>
            <%= form.text_field :title , class:'form-control', placeholder:'Title of article' %>
          </div>
        </div>
        <div class = 'form-group row mt-3'>
          <%= form.label :body , class:'col-2 col-form-label text-light' %>
          <div class='col-10'>
            <%= form.text_area :body, rows:10 , class:'form-control', placeholder:'Description of article' %>
          </div>
        </div>
        <div class = 'd-flex justify-content-center mt-3'>
          <%= form.submit class:'btn btn-outline-light btn-lg '%>
        </div>
      <% end %>
    </div>
    <div class="mb-3 d-flex justify-content-center mt-3">
      <%= link_to '[Cancel and reuturn to the article listing]', articles_path(@articles) %>
    </div>
  </div>
