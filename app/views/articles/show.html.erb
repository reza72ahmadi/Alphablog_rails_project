<h2 class="text-center mt-4"><%= @article.title%></h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4 ">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          By: <%= @article.user.username %>
        </div>
        <div class="card-body">
          <div class="card-text text-left"><%= simple_format(@article.body) %></div>
          <% if logged_in? && (@article.user == current_user || current_user.admin?)%>
            <%= link_to 'Edit', edit_article_path(@article),class:"btn btn-outline-info" %>
            <%= link_to 'Delete', article_path(@article),class:"btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          <% end%>
        </div>
        <div class="card-footer text-body-secondary">
          <small><%=time_ago_in_words(@article.created_at) %>
            <%=time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="text-center  mb-4">
  <%= link_to '[ Cancel and return to article lissting ]',
  articles_path ,  class:"text-center text-primary" %>
</div>
